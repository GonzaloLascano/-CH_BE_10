DOCTYPE
  html(lang="es")
    head
      meta(charset="UTF-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      
      link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
      title Desafio Clase 10
    body
      div(class="d-flex flex-column justify-content-around container-sm my-5 p-4 shadow rounded-3")
        h2(class="my-3 border-bottom")='Formularios de Ingreso de Producto'
        form(action="/productos" method="POST" class="d-flex flex-column justify-content-around border-bottom")
          h4(class="mt-3") Producto: 
          input(type="text" name="title") 
          h4(class="mt-3") Precio: 
          input(type="number" name="price") 
          h4(class="mt-3") Imagen: 
          input(type="text" name="thumbnail")
          button(class="my-4 btn-dark btn-lg w-50 mx-auto") Enviar 
        button(type="button" class="btn btn-outline-secondary" onclick="window.location.href='/productos';")='Ver Lista'
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    
